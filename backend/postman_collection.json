{
  "info": {
    "name": "LaTienditaApi - Collection",
    "_postman_id": "la-tiendita-collection",
    "description": "Colecci√≥n Postman con endpoints principales (auth, users, products, upload). Variables: {{baseUrl}}, {{token}}.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "apiBaseDefault",
      "value": "http://localhost:4800",
      "type": "string",
      "description": "Valor por defecto del API (no tocar si quieres conservar referencia)"
    },
    {
      "key": "apiBase",
      "value": "http://localhost:4800",
      "type": "string",
      "description": "URL base del API; editar para apuntar a otro host/puerto"
    },
    {
      "key": "token",
      "value": "",
      "type": "string",
      "description": "Bearer token; rellenar tras /auth/login"
    },
    {
      "key": "imagePath",
      "value": "<path-to-local-file.jpg>",
      "type": "string",
      "description": "Ruta local a una imagen usada en requests multipart (Postman)"
    }
  ],
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"email\": \"admin@local\",\n  \"password\": \"admin123\",\n  \"avatar\": \"https://example.com/avatar.jpg\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{apiBase}}/api/auth/register"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@local\",\n  \"password\": \"admin123\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{apiBase}}/api/auth/login"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Guarda el accessToken de la respuesta en la variable de entorno 'token'",
              "try {",
              "  var json = pm.response.json();",
              "  if (json && json.accessToken) {",
              "    pm.environment.set('token', json.accessToken);",
              "    console.log('token guardado en variable de entorno');",
              "  }",
              "} catch (e) {",
              "  console.log('No se pudo parsear respuesta o no contiene accessToken');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Products - Get all",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{apiBase}}/api/products"
        }
      }
    },
    {
      "name": "Products - Get by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{apiBase}}/api/products/1"
        }
      }
    },
    {
      "name": "Products - Create (multipart)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "name",
              "value": "Leche Especial",
              "type": "text"
            },
            {
              "key": "description",
              "value": "Leche de prueba",
              "type": "text"
            },
            {
              "key": "price",
              "value": "1.5",
              "type": "text"
            },
            {
              "key": "stock",
              "value": "10",
              "type": "text"
            },
            {
              "key": "image",
              "type": "file",
              "src": [
                "{{imagePath}}"
              ]
            }
          ]
        },
        "url": {
          "raw": "{{apiBase}}/api/products"
        }
      }
    },
    {
      "name": "Products - Update (multipart)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "name",
              "value": "Leche Actualizada",
              "type": "text"
            },
            {
              "key": "price",
              "value": "1.75",
              "type": "text"
            },
            {
              "key": "image",
              "type": "file",
              "src": [
                "{{imagePath}}"
              ]
            }
          ]
        },
        "url": {
          "raw": "{{apiBase}}/api/products/1"
        }
      }
    },
    {
      "name": "Products - Delete",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{apiBase}}/api/products/1"
        }
      }
    },
    {
      "name": "Upload - Image",
      "request": {
        "method": "POST",
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "image",
              "type": "file",
              "src": [
                "{{imagePath}}"
              ]
            }
          ]
        },
        "url": {
          "raw": "{{apiBase}}/api/upload"
        }
      }
    },
    {
      "name": "Users - Update Avatar",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"avatar\": \"{{apiBase}}/public/images/example.jpg\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{apiBase}}/api/users/avatar"
        }
      }
    },
    {
      "name": "Users - Me (profile)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{apiBase}}/api/users/me"
        }
      }
    },
    {
      "name": "Docs - OpenAPI JSON",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{apiBase}}/api-docs.json"
        }
      }
    }
  ]
}
